<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.code.testsys.mapper.TeacherCourseMapper">
    <select id="selectCour" resultType="cn.code.testsys.domain.Course">
        select * from course
    </select>


    <select id="selectCoursePage" resultType="cn.code.testsys.domain.Course">
        select * from course limit #{start},#{pageSize}
    </select>

    <select id="selectCount" resultType="int">
        select count(*) from course
    </select>

    <delete id="delete">
        delete from course where id=#{id}
    </delete>

    <insert id="insert" keyProperty="id" keyColumn="id" useGeneratedKeys="true">
        insert into course(name,startDate,count)
        values(#{course.name},#{course.startDate},${course.count})
    </insert>

</mapper>